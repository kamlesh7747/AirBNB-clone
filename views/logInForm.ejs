<% layout("layouts/boilerplate") %>

    <div class="row offset-3 col-6">
        <form action="/user/logIn" method="post">
            <h3>Log In to AirBNB</h3>

            <label for="username">username</label>
            <input type="text" name="username" class="col-6 form-control">

            <label for="password">password</label>
            <input type="password" name="password" class="col-6 form-control">

            <button type="submit" class="btn btn-success mt-2">Log In</button>
        </form>
    </div>